    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: External Terminal via Learn.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/learn.py",
            "console": "externalTerminal",
            "args": [
                "${workspaceFolder}/configs/my_config.yaml"
            ],
            "preLaunchTask": "Start Unity Task"
        }
    ]
}